{
  "name": "@weather-and-traffic-api/server-nest",
  "version": "1.0.0",
  "main": "dist/src/main",
  "license": "UNLICENSED",
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/platform-express": "^10.3.8",
    "@types/node": "^20.12.12",
    "reflect-metadata": "0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "scripts": {
    "build": "nest build",
    "start:dev": "nest start --watch",
    "start:prod": "node .",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.8",
    "ts-jest": "^29.1.2"
  }
}
